{
	"name": "higoralves.dev",
	"version": "1.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"storybook": "start-storybook -p 6006",
		"build:storybook": "build-storybook",
		"lint": "next lint --ignore-path .gitignore",
		"prettier": "prettier --ignore-path .gitignore -c -w .",
		"test": "jest --watch --passWithNoTests",
		"test:ci": "jest --ci -o --passWithNoTests",
		"test:coverage": "jest -o --collectCoverage --no-cache --passWithNoTests",
		"cy": "cypress open",
		"cy:run": "cypress run -q",
		"cy:ci": "start-server-and-test dev http://localhost:3000 cy:run",
		"test:all": "npm-run-all test:ci cy:run",
		"validate": "npm-run-all --parallel lint prettier test:all build build:storybook",
		"release": "yarn run standard-version",
		"release:major": "yarn release -- --release-as major",
		"release:minor": "yarn release -- --release-as minor",
		"release:patch": "yarn release -- --release-as patch",
		"release:alpha": "yarn release -- --prerelease alpha",
		"release:beta": "yarn run release -- --prerelease beta",
		"clean": "rimraf .husky && rimraf storybook-static && rimraf .swc && rimraf .next",
		"prepare:husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\" && npx husky add .husky/pre-push \"yarn run validate\" && npx husky add .husky/commit-msg \"npx commitlint --edit $1\""
	},
	"dependencies": {
		"@emotion/react": "^11.10.6",
		"@emotion/server": "^11.10.0",
		"@emotion/styled": "^11.10.6",
		"@mantine/carousel": "^6.0.8",
		"@mantine/core": "^6.0.8",
		"@mantine/hooks": "^6.0.8",
		"@mantine/next": "^6.0.8",
		"@tabler/icons-react": "^2.17.0",
		"@vercel/edge-config": "^0.1.7",
		"embla-carousel-react": "^7.1.0",
		"next": "13.4.2",
		"react": "18.2.0",
		"react-dom": "18.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.21.4",
		"@commitlint/cli": "^17.6.1",
		"@commitlint/config-conventional": "^17.6.1",
		"@storybook/addon-actions": "^7.0.7",
		"@storybook/addon-essentials": "^7.0.7",
		"@storybook/addon-interactions": "^7.0.7",
		"@storybook/addon-links": "^7.0.7",
		"@storybook/builder-webpack5": "^7.0.7",
		"@storybook/manager-webpack5": "^6.5.16",
		"@storybook/react": "^7.0.7",
		"@storybook/testing-library": "^0.1.0",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/node": "18.16.0",
		"@types/react": "18.0.38",
		"@types/react-dom": "18.0.11",
		"babel-loader": "^9.1.2",
		"cypress": "^12.10.0",
		"eslint": "8.39.0",
		"eslint-config-next": "13.3.1",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-storybook": "^0.6.11",
		"eslint-plugin-testing-library": "^5.10.3",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"lint-staged": "^13.2.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"pretty-quick": "^3.1.3",
		"rimraf": "^5.0.0",
		"standard-version": "^9.5.0",
		"start-server-and-test": "^2.0.0",
		"storybook-dark-mode": "^3.0.0",
		"typescript": "5.0.4"
	},
	"packageManager": "yarn@1.22.19"
}
