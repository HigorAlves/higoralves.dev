{
	"name": "novac.cash",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"storybook": "start-storybook -p 6006",
		"build:storybook": "build-storybook",
		"lint": "next lint --ignore-path .gitignore",
		"prettier": "prettier --ignore-path .gitignore -c -w .",
		"test": "jest --watch --passWithNoTests",
		"test:ci": "jest --ci -o --passWithNoTests",
		"test:coverage": "jest -o --collectCoverage --no-cache --passWithNoTests",
		"cy": "cypress open",
		"cy:run": "cypress run -q",
		"cy:ci": "start-server-and-test dev http://localhost:3000 cy:run",
		"test:all": "npm-run-all test:ci cy:run",
		"validate": "npm-run-all --parallel lint prettier test:all build build:storybook",
		"release": "yarn run standard-version",
		"release:major": "yarn release -- --release-as major",
		"release:minor": "yarn release -- --release-as minor",
		"release:patch": "yarn release -- --release-as patch",
		"release:alpha": "yarn release -- --prerelease alpha",
		"release:beta": "yarn run release -- --prerelease beta",
		"clean": "rimraf .husky && rimraf storybook-static && rimraf .swc && rimraf .next",
		"prepare:husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\" && npx husky add .husky/pre-push \"yarn run validate\" && npx husky add .husky/commit-msg \"npx commitlint --edit $1\""
	},
	"dependencies": {
		"@emotion/react": "^11.10.5",
		"@emotion/server": "^11.10.0",
		"@emotion/styled": "^11.10.5",
		"@mantine/core": "^5.9.5",
		"@mantine/hooks": "^5.9.5",
		"@mantine/next": "^5.9.5",
		"@mdx-js/loader": "^2.2.1",
		"@mdx-js/react": "^2.2.1",
		"@next/mdx": "^13.1.6",
		"@tabler/icons": "^1.118.0",
		"@vercel/edge-config": "^0.1.1",
		"next": "13.0.7",
		"react": "18.2.0",
		"react-dom": "18.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.20.5",
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"@storybook/addon-actions": "^6.5.14",
		"@storybook/addon-essentials": "^6.5.14",
		"@storybook/addon-interactions": "^6.5.14",
		"@storybook/addon-links": "^6.5.14",
		"@storybook/builder-webpack5": "^6.5.14",
		"@storybook/manager-webpack5": "^6.5.14",
		"@storybook/react": "^6.5.14",
		"@storybook/testing-library": "^0.0.13",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/node": "18.11.15",
		"@types/react": "18.0.26",
		"@types/react-dom": "18.0.9",
		"babel-loader": "^9.1.0",
		"cypress": "^12.1.0",
		"eslint": "8.29.0",
		"eslint-config-next": "13.0.7",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-storybook": "^0.6.8",
		"eslint-plugin-testing-library": "^5.9.1",
		"husky": "^8.0.2",
		"jest": "^29.3.1",
		"jest-environment-jsdom": "^29.3.1",
		"lint-staged": "^13.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.1",
		"pretty-quick": "^3.1.3",
		"rimraf": "^3.0.2",
		"standard-version": "^9.5.0",
		"start-server-and-test": "^1.15.2",
		"storybook-dark-mode": "^2.0.5",
		"typescript": "4.9.4"
	}
}
