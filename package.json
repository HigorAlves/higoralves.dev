{
	"name": "novac.cash",
	"version": "0.1.1",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"storybook": "start-storybook -p 6006",
		"build:storybook": "build-storybook",
		"lint": "next lint --ignore-path .gitignore",
		"prettier": "prettier --ignore-path .gitignore -c -w .",
		"test": "jest --watch --passWithNoTests",
		"test:ci": "jest --ci -o --passWithNoTests",
		"test:coverage": "jest -o --collectCoverage --no-cache --passWithNoTests",
		"cy": "cypress open",
		"cy:run": "cypress run -q",
		"cy:ci": "start-server-and-test dev http://localhost:3000 cy:run",
		"test:all": "npm-run-all test:ci cy:run",
		"validate": "npm-run-all --parallel lint prettier test:all build build:storybook",
		"release": "yarn run standard-version",
		"release:major": "yarn release -- --release-as major",
		"release:minor": "yarn release -- --release-as minor",
		"release:patch": "yarn release -- --release-as patch",
		"release:alpha": "yarn release -- --prerelease alpha",
		"release:beta": "yarn run release -- --prerelease beta",
		"clean": "rimraf .husky && rimraf storybook-static && rimraf .swc && rimraf .next",
		"prepare:husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\" && npx husky add .husky/pre-push \"yarn run validate\" && npx husky add .husky/commit-msg \"npx commitlint --edit $1\""
	},
	"dependencies": {
		"next": "12.2.2",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"styled-components": "^5.3.5"
	},
	"devDependencies": {
		"@babel/core": "^7.18.6",
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@storybook/addon-actions": "^6.5.9",
		"@storybook/addon-essentials": "^6.5.9",
		"@storybook/addon-interactions": "^6.5.9",
		"@storybook/addon-links": "^6.5.9",
		"@storybook/builder-webpack5": "^6.5.9",
		"@storybook/manager-webpack5": "^6.5.9",
		"@storybook/react": "^6.5.9",
		"@storybook/testing-library": "^0.0.13",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.3.0",
		"@testing-library/user-event": "^14.2.1",
		"@types/node": "18.0.4",
		"@types/react": "18.0.15",
		"@types/react-dom": "18.0.6",
		"@types/styled-components": "^5.1.25",
		"babel-loader": "^8.2.5",
		"cypress": "^10.3.0",
		"eslint": "8.19.0",
		"eslint-config-next": "12.2.2",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-storybook": "^0.6.1",
		"eslint-plugin-testing-library": "^5.5.1",
		"husky": "^8.0.1",
		"jest": "^28.1.3",
		"jest-environment-jsdom": "^28.1.3",
		"lint-staged": "^13.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3",
		"rimraf": "^3.0.2",
		"standard-version": "^9.5.0",
		"start-server-and-test": "^1.14.0",
		"typescript": "4.7.4"
	}
}
